# ─── Banco de Dados ───────────────────────────────────────────────────────────
DATABASE_URL="postgresql://user:password@localhost:5432/fiado_db"

# ─── Redis (BullMQ) ───────────────────────────────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ─── Banco Inter — Credenciais OAuth2 ─────────────────────────────────────────
INTER_CLIENT_ID="seu-client-id"
INTER_CLIENT_SECRET="seu-client-secret"

# Certificados mTLS: use CAMINHO (dev local) OU BASE64 (produção/secrets manager)
INTER_CERT_PATH="./certs/inter.crt"
INTER_KEY_PATH="./certs/inter.key"
# INTER_CERT_B64="base64-do-certificado"
# INTER_KEY_B64="base64-da-chave-privada"

# URL base da API do Inter
# Produção: https://cdpj.partners.bancointer.com.br
# Sandbox:  https://cdpj.partners.uatinter.co
INTER_BASE_URL="https://cdpj.partners.uatinter.co"

# Chave Pix da conta Inter do SaaS (recebe todos os pagamentos)
INTER_PIX_KEY="cnpj-ou-email-da-conta-inter"

# ─── Webhook ──────────────────────────────────────────────────────────────────
# Token secreto incluído na URL do webhook para validação básica
WEBHOOK_SECRET="gere-um-uuid-aleatorio-aqui"

# URL pública do backend (para registrar no Inter)
PUBLIC_URL="https://api.seudominio.com.br"

# ─── Negócio ──────────────────────────────────────────────────────────────────
# Percentual de taxa da plataforma retido antes do repasse (ex: 1.5 = 1.5%)
TAXA_PLATAFORMA_PERCENT="1.5"

# ─── Servidor ─────────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV="development"

# CORS — origem permitida para chamadas do frontend (use * para dev, URL exata em prod)
CORS_ORIGIN="*"
